<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xyd.dao.RuleDao">

    <resultMap type="com.example.xyd.entity.Rule" id="RuleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="methodId" column="method_id" jdbcType="INTEGER"/>
        <result property="operator" column="operator" jdbcType="VARCHAR"/>
        <result property="threshold" column="threshold" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RuleMap">
        select
          id, name, method_id, operator, threshold
        from rule_engine.rule
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RuleMap">
        select
          id, name, method_id, operator, threshold
        from rule_engine.rule
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RuleMap">
        select
          id, name, method_id, operator, threshold
        from rule_engine.rule
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="methodId != null">
                and method_id = #{methodId}
            </if>
            <if test="operator != null and operator != ''">
                and operator = #{operator}
            </if>
            <if test="threshold != null">
                and threshold = #{threshold}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into rule_engine.rule(name, method_id, operator, threshold)
        values (#{name}, #{methodId}, #{operator}, #{threshold})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update rule_engine.rule
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="methodId != null">
                method_id = #{methodId},
            </if>
            <if test="operator != null and operator != ''">
                operator = #{operator},
            </if>
            <if test="threshold != null">
                threshold = #{threshold},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from rule_engine.rule where id = #{id}
    </delete>

</mapper>